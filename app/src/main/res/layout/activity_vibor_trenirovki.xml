<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViborTrenirovki"
    android:orientation="vertical"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Ежедневнные тренировки"
            tools:textSize="18dp"
            tools:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/AllStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/CountCcal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="0 \n ККАл"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/CountTren"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 \n тренировки"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/CountMin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 \n минут"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:id="@+id/AllProgram"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/AllBody"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="300dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/rounded_corner"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="202dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|end"
                                android:layout_marginStart="130dp"
                                android:layout_marginTop="10dp"
                                android:text="Начните свой путь к идеальной фигуре, тренируя \n все группы мыщц \n по программе 7x4"
                                android:textColor="#FFFFFFFF"
                                android:textStyle="bold|italic">

                            </TextView>

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_marginTop="-50dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/plechi">

                            </ImageView>

                            <Button
                                android:id="@+id/BtnAllBody"
                                android:layout_width="135dp"
                                android:layout_height="59dp"
                                android:layout_gravity="center_vertical|center"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="10dp"
                                android:text="Начать">
                            </Button>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LowerBody"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/rounded_corner2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="194dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|end"
                                android:layout_marginStart="130dp"
                                android:layout_marginTop="10dp"
                                android:text="Укрепите ноги, увеличьте силу нижней части тела и улучшите свою общую физическую подготовку"
                                android:textColor="#FFFFFFFF"
                                android:textStyle="bold|italic">

                            </TextView>

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_marginTop="-50dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/lowerpartofbody">

                            </ImageView>

                            <Button
                                android:id="@+id/BtnLowerBody"
                                android:layout_width="135dp"
                                android:layout_height="59dp"
                                android:layout_gravity="center_vertical|center"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:text="Начать">
                            </Button>

                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>

            </HorizontalScrollView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:id="@+id/PressContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/AllProgram"
                            android:layout_marginTop="20dp"
                            android:text="НОВЧИОК"
                            android:textStyle="normal|bold">

                        </TextView>

                        <LinearLayout
                            android:id="@+id/Press"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="40dp"
                            android:layout_marginEnd="40dp"
                            android:backgroundTint="#7A015E"
                            android:background="@drawable/rounded_corner"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:paddingStart="10dp"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/pres">

                            </ImageView>

                            <TextView
                                android:layout_width="202dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="-80dp"
                                android:layout_marginStart="130dp"
                                android:text="ПРЕСС НОВИЧОК"
                                android:textColor="#FFFFFFFF"
                                android:textStyle="bold|italic">

                            </TextView>

                            <Button
                                android:id="@+id/BtnPress"
                                android:layout_width="135dp"
                                android:layout_height="59dp"
                                android:layout_gravity="center_vertical|center"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="30dp"
                                android:text="Начать">
                            </Button>


                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>

            </ScrollView>

            <LinearLayout
                android:id="@+id/ChestContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/PressContainer"
                android:layout_marginLeft="15dp">

                <LinearLayout
                    android:id="@+id/Chest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#00D9C6"
                    android:background="@drawable/rounded_corner"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:paddingStart="10dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/otzimanie">

                    </ImageView>

                    <TextView
                        android:layout_width="202dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="-80dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="130dp"
                        android:text="ГРУДЬ НОВИЧОК"
                        android:textColor="#FFFFFFFF"
                        android:textStyle="bold|italic">

                    </TextView>

                    <Button
                        android:id="@+id/BtnChest"
                        android:layout_width="135dp"
                        android:layout_height="59dp"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:text="Начать">
                    </Button>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/HandContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/ChestContainer"
                android:layout_marginLeft="15dp">

                <LinearLayout
                    android:id="@+id/Hand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#667895"
                    android:background="@drawable/rounded_corner"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:paddingStart="10dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ruki">

                    </ImageView>

                    <TextView
                        android:layout_width="202dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="-80dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="130dp"
                        android:text="РУКИ НОВИЧОК"
                        android:textColor="#FFFFFFFF"
                        android:textStyle="bold|italic">

                    </TextView>

                    <Button
                        android:id="@+id/BtnHand"
                        android:layout_width="135dp"
                        android:layout_height="59dp"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="30dp"
                        android:text="Начать">
                    </Button>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-37dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">

        <!-- Три равные части -->
        <ImageView
            android:id="@+id/Statistic"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/graph" />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/clock" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/personalcabinet" />

    </LinearLayout>
</LinearLayout>